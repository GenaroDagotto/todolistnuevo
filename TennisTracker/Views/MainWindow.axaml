<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="TennisTracker.Views.MainWindow"
        Title="Tennis Tracker" Width="500" Height="600">
    <StackPanel Margin="10" Spacing="10">

        <!-- SecciÃ³n de nuevo partido -->
        <TextBlock Text="Opponent:"/>
        <TextBox x:Name="OpponentTextBox" Width="400"/>

        <TextBlock Text="Score:"/>
        <TextBox x:Name="ScoreTextBox" Width="400"/>

        <TextBlock Text="Notes:"/>
        <TextBox x:Name="NotesTextBox" Width="400" Height="60" AcceptsReturn="True"/>

        <Button Content="Add Match" Click="AddMatchButton_Click" Width="150"/>

        <Separator/>

        <!-- Lista de partidos -->
        <TextBlock Text="Matches:" FontWeight="Bold"/>
        <ListBox x:Name="MatchListBox" Height="300" HorizontalAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="{Binding Opponent}" Width="150"/>
                        <TextBlock Text="{Binding Score}" Width="100"/>
                        <TextBlock Text="{Binding Notes}" Width="200"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button Content="Remove Selected Match" Click="RemoveMatchButton_Click" Width="200"/>

    </StackPanel>
</Window>